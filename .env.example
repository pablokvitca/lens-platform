# Database
# DATABASE_URL is stored in .env.local (not committed to git)

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-key

# Discord Bot
DISCORD_BOT_TOKEN=your-bot-token

# Discord OAuth
DISCORD_CLIENT_ID=your-client-id
DISCORD_CLIENT_SECRET=your-client-secret
DISCORD_REDIRECT_URI=http://localhost:8000/auth/discord/callback

# JWT Authentication
JWT_SECRET=your-jwt-secret

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Stampy channel (use different channels per bot instance to avoid duplicates)
ASK_STAMPY_CHANNEL=ask-stampy

# Test bots for breakout room testing (optional, comma-separated)
TEST_BOT_TOKENS=

# Analytics & Error Tracking
VITE_POSTHOG_KEY=           # PostHog project API key (get from eu.posthog.com)
VITE_POSTHOG_HOST=https://eu.posthog.com
VITE_SENTRY_DSN=            # Sentry DSN for frontend (get from sentry.io)
SENTRY_DSN=                 # Sentry DSN for backend (same project or separate)

# Google Calendar Integration
# Service account credentials JSON file path
GOOGLE_CALENDAR_CREDENTIALS_FILE=/path/to/service-account.json
# Calendar email (must match Workspace user)
GOOGLE_CALENDAR_EMAIL=calendar@lensacademy.org

# Email Notifications (SendGrid)
SENDGRID_API_KEY=           # SendGrid API key (get from app.sendgrid.com)
FROM_EMAIL=team@lensacademy.org  # Verified sender email
